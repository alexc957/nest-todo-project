<%- include('../../compartido/cabezera', {usuario: datos.usuario}) %>

<div class="container">



    <br>
    <% if(datos.error){ %>
        <div class="alert alert-danger" role="alert">
            <%= datos.error %>
        </div>
    <% } %>
    <% if(datos.mensaje){ %>
        <div class="alert alert-success" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>

    <br>
    <a  href="/tarea/ruta/nuevaTarea">
        <button
                class="btn btn-primary"
                type="submit">
            AÃ±adir Tarea
        </button>

    </a>
    <br>
    <br>
    <% datos.tareas.forEach((tarea) => { %>
    <div class="card" style="width: 95%;">

        <div class="card-body">
            <h5 class="card-title"><%= tarea.nombre %></h5>
            <p class="card-text"><%= tarea.descripcion %></p>
            <a href="/tarea/ruta/verTarea?idTarea=<%= tarea.id %>" class="btn btn-primary">Ver Tarea</a>
        </div>
    </div>
        <br>
    <%})%>

</div>

