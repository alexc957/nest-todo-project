<%- include('../../compartido/cabezera', {usuario: datos.usuario}) %>

<br>
<div class="container">

    <% if (datos.errores) { %>
        <div class="alert alert-danger" role="alert">
            <%= datos.errores %>
        </div>


    <%}%>


    <form
            action="/usuario/actualizar/<%= datos.usuario.id %>"
            method="POST" >
        <div class="form-group">
            <label for="nombreId">Nombre</label>
            <input
                    type="text"
                    class="form-control"
                    id="nombreId"
                    name="nombre"
                    value="<%= datos.usuario.nombre %>"
            >
        </div>

        <div class="form-group">
            <label for="apellidoId">Apellido</label>
            <input
                    type="text"
                    class="form-control"
                    id="apellidoId"
                    name="apellido"
                    value="<%= datos.usuario.apellido %>"
            >
        </div>



        <div class="form-group">
            <label for="exampleInputEmail1">Email </label>
            <input
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                    name="correo"
                    value="<%= datos.usuario.correo %>"
            >
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input
                    type="password"
                    class="form-control"
                    id="exampleInputPassword1"
                    name="passwordHash"
                    value="<%= datos.usuario.passwordHash %>"
            >
        </div>

        <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>

</div>



<%- include('../../compartido/footer') %>
