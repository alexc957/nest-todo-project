<%- include('../../compartido/cabezera', {usuario: datos.usuario}) %>

<br>
<div class="container">

    <% if (datos.errores) { %>
        <div class="alert alert-danger" role="alert">
            <%= datos.errores %>
        </div>


    <%}%>


    <form
            action="/usuario/login"
            method="POST" >

        <div class="form-group">
            <label for="exampleInputEmail1">Email </label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="correo">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="passwordHash">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

</div>



